@using Stepre.Areas.Admin.Models.CreateModels
@model WorkerCreateModel
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Create worker</h4>
                <form class="forms-sample" method="post" asp-action="Create">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname">Surname</label>
                        <input asp-for="Surname" class="form-control" placeholder="Surname">
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Profession">Profession</label>
                        <input asp-for="Profession" class="form-control" placeholder="Profession">
                        <span asp-validation-for="Profession" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Salary">Salary</label>
                        <input asp-for="Salary" class="form-control" placeholder="Salary">
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageUrl">ImageUrl</label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="ImageUrl">
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FacebookUrl">FacebookUrl</label>
                        <input asp-for="FacebookUrl" class="form-control" placeholder="FacebookUrl">
                        <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TwitterUrl">TwitterUrl</label>
                        <input asp-for="TwitterUrl" class="form-control" placeholder="TwitterUrl">
                        <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>