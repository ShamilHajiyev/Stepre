@{
    Product product = Model;
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product</h4>
                <p>
                    @product.Name
                </p>
                <p>
                    @product.PrimaryImageUrl
                </p>
                <p>
                    @product.SecondaryImageUrl
                </p>
                <p>
                    @product.Price
                </p>
                <p>
                    @product.Count
                </p>
                <p>
                    @product.Details
                </p>
                <p>
                    @product.Description
                </p>
                <p>
                    @product.Category.Name
                </p>
            </div>
        </div>
    </div>
</div>