@using Stepre.Areas.Admin.Models.CreateModels
@model ProductCreateModel
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Create product</h4>
                <form class="forms-sample" method="post" asp-action="Create">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PrimaryImgUrl">PrimaryImgUrl</label>
                        <input asp-for="PrimaryImgUrl" class="form-control" placeholder="PrimaryImgUrl">
                        <span asp-validation-for="PrimaryImgUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SecondaryImgUrl">SecondaryImgUrl</label>
                        <input asp-for="SecondaryImgUrl" class="form-control" placeholder="SecondaryImgUrl">
                        <span asp-validation-for="SecondaryImgUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input asp-for="Price" class="form-control" placeholder="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Count">Count</label>
                        <input asp-for="Count" class="form-control" placeholder="Count">
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Details">Details</label>
                        <input asp-for="Details" class="form-control" placeholder="Details">
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Description</label>
                        <input asp-for="Description" class="form-control" placeholder="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category">Category</label>
                        <input asp-for="Category" class="form-control" placeholder="Category">
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-light" asp-action="Index">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>