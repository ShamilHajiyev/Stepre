@{
    About about = Model;
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">About</h4>
                <p>
                    @about.TopContent
                </p>
                <p>
                    @about.ImgUrl
                </p>
                <p>
                    @about.BottomContent
                </p>
                <p>
                    @about.Quote
                </p>
                <p>
                    @about.Header
                </p>
                <p>
                    <a class="btn btn-success" asp-action="update">Update</a>
                </p>
            </div>
        </div>
    </div>
</div>