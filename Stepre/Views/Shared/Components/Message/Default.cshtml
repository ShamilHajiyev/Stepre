@using Stepre.Models.CRUDModels
@model MessageCreateModel

<form class="contact-form-style" id="contact-form"
      asp-controller="Contact" asp-action="Create" method="post">
    <div class="row">
        <div class="col-lg-12">
            <input asp-for="Name" placeholder="Name*" type="text" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-lg-12">
            <input asp-for="Email" placeholder="Email*" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-lg-12">
            <input asp-for="Subject" placeholder="Subject*" type="text" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>
        <div class="col-lg-12 text-center">
            <textarea asp-for="Content" placeholder="Your Message*"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
            <button class="btn btn-primary" type="submit">Send Message</button>
        </div>
    </div>
</form>