@using Stepre.Models.ViewModels
@{
    ViewData["Title"] = "Privacy";
    PrivacyViewModel privacyViewModel = Model;
    var privacyPolicies = privacyViewModel.PrivacyPolicies;
}

<!--Privacy Area Start-->
<div class="home-hello-info">
    <div class="container">
        <div class="row mt-3">
            <div class="col-md-12">
                <div class="f-title text-center">
                    <h3 class="title privacy-title text-uppercase">Privacy Policy</h3>
                </div>
            </div>
        </div>
        <div class="row mb-n-30px">
            <div class="col-lg-12 col-sm-12 col-xs-12 mb-30px">
                <div class="about-page-cntent">
                    @foreach (var item in privacyPolicies)
                    {
                        <p>@item.Content</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!--End of Privacy Area-->