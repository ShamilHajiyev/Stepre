@using Stepre.Models.Entities
@{
    ViewData["Title"] = "Blog";
    Blog item = Model;
}
<!--Blog Details Area Start-->
<section class="product-details-area my-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="arrival-heading">
                    <h2>Blog</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 mb-30px">
                        <div class="product-s-l">
                            <div class="product-large">
                                <div class="tab-content">
                                    <div class="tab-pane active in" id="img-1">
                                        <a href="#">
                                            <img alt=""
                                                 src="~/img/@item.ImageUrl">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 mb-30px">
                        <div class="product-right-details">
                            <div class="product-info">
                                <h4>@item.Name</h4>
                            </div>
                        </div>
                        <div class="borderd-para">
                            <p>@item.PublisherName</p>
                            <p>@item.PublishDate.ToLongDateString()</p>
                        </div>
                        <p class="details">
                            @item.Content
                        </p>
                    </div>
            </div>
        </div>
    </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="arrival-heading">
                    <h2>Tags</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <h3>@item.Tag.Name</h3>
        </div>
    </div>
</section>
<!--End of Blog Details Area-->