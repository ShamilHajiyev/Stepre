@using Stepre.Models.Entities
@using Stepre.Models.ViewModels
@{
    ViewData["Title"] = "Home";
    HomeViewModel homeViewModel = Model;
    var freeShippingValue = homeViewModel.FreeShippingValue;
    decimal minimalAmount = (decimal)freeShippingValue.MinimalAmount;
    var phoneNumber = homeViewModel.PhoneNumber;
    var categories = homeViewModel.Categories;
    var catAreaCategories = categories.OrderByDescending(x => x.Products.Count).Take(6).ToList();
    var promotionAreaCategories = categories.OrderByDescending(x => x.Products.Count).Take(10).ToList();
    var products = homeViewModel.Products;
    var featuresTabCategories = categories.OrderByDescending(x => x.Products.Count).Take(3).ToList();
    var tags = homeViewModel.Tags;
    var promotionAreaProducts = products.Take(2).ToList();
    var blogs = homeViewModel.Blogs;
    var latestNewsBlogs = blogs.OrderByDescending(x => x.PublishDate).Take(4).ToList();
    var latestBlogs = blogs.OrderByDescending(x => x.PublishDate).Take(3).ToList();
}

<!--Slider Area Start-->
<div class="slider-area">
    <div class="preview-2">
        <div id="nivoslider" class="slides">
            <img src="~/img/slider/slider-1.jpg" alt="" title="#slider-direction-1" />
            <img src="~/img/slider/slider-2.jpg" alt="" title="#slider-direction-2" />
        </div>
        <!-- direction 1 -->
        <div id="slider-direction-1" class="t-cn slider-direction">
            <div class="slider-progress"></div>
            <!-- layer 1 -->
            <div class="layer-1">
                <img src="~/img/slider/slider-l-1.png" alt="" />
            </div>
            <!-- layer 2 -->
            <div class="layer-2">
                <img src="~/img/slider/slider-l-2.png" alt="" />
            </div>
            <!-- layer 3 -->
            <div class="layer-3">
                <img src="~/img/slider/slider-l-3.png" alt="" />
            </div>
            <!-- layer 4 -->
            <div class="layer-4">
                <img src="~/img/slider/slider-l-4.png" alt="" />
            </div>
            <!-- layer 5 -->
            <div class="layer-5">
                <img src="~/img/slider/slider-l-5.png" alt="" />
            </div>
            <!-- layer 6 -->
            <div class="wow bounceInDown layer-6" data-wow-duration="3s" data-wow-delay="3.5s">
                <img src="~/img/slider/slider-l-6.png" alt="" />
            </div>
            <div class="slider-content slider-text-1">
                <div class="wow bounceInDown" data-wow-duration="3s" data-wow-delay="3s">
                    <h1 class="title1">Booking gifts to $988</h1>
                </div>
            </div>
        </div>
        <!-- direction 2 -->
        <div id="slider-direction-2" class="slider-direction">
            <div class="slider-progress"></div>
            <!-- layer 7 -->
            <div class="wow bounceInDown t-cn layer-7" data-wow-duration="3s" data-wow-delay="0s">
                <img class="t-cn" src="~/img/slider/slider-l-logo.png" alt="" />
            </div>
            <div class="slider-content slider-text-2">
                <div class="wow bounceInDown" data-wow-duration="3s" data-wow-delay="1s">
                    <h1 class="title1">Technological head</h1>
                </div>
            </div>
            <div class="slider-content slider-text-3">
                <div class="wow bounceInRight" data-wow-duration="3s" data-wow-delay="3s">
                    <h5 class="title1">
                        The design improvement, increased screen size and impressive camera meant
                        that they shattered sales records in 2022<br>
                        Apple Pay, Touch ID, best smartphone camera on the market
                    </h5>
                </div>
            </div>
            <div class="slider-content slider-text-4">
                <div class="wow bounceInUp" data-wow-duration="3s" data-wow-delay="3s">
                    <a asp-controller="shop" asp-action="index" class='button-text'>Buy Now <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End of Slider Area-->
<!--Category Service Area Start-->
<section class="cat-service-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 d-none d-lg-block">
                <div class="cat-menu">
                    <ul id="category">
                        <li class="cat-title"><a asp-controller="shop">Categories</a></li>
                        @foreach (var item in catAreaCategories)
                        {
                            <li><a asp-controller="shop">@Html.Raw(item.Name)</a></li>
                        }
                        <li><a asp-controller="shop">all categories</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 col-md-7 col-sm-12">
                <div class="cat-service-banner border-hover">
                    <a asp-controller="shop">
                        <img src="~/img/banner/banner-1.jpg" alt="">
                        <div class="banner-text">
                            <h3>Toshiba Satellite Z930</h3>
                            <h2>Price $564</h2>
                        </div>
                    </a>
                </div>
