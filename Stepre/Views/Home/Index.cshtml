                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        @{
                            bool isFirstCategory = true;
                            foreach (var item in featuresTabCategories)
                            {
                                @if (isFirstCategory)
                                {
                                    <li role="presentation">
                                        <a class="active" href="#@item.Name.Replace(" ", "_")" aria-controls="@item.Name.Replace(" ", "_")" role="tab"
                                   data-bs-toggle="tab">@Html.Raw(item.Name)</a>
                                    </li>
                                    isFirstCategory = false;
                                }
                                else
                                {
                                    <li role="presentation">
                                        <a href="#@item.Name.Replace(" ", "_")" aria-controls="@item.Name.Replace(" ", "_")" role="tab"
