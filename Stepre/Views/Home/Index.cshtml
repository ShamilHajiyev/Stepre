                                    </li>
                                }
                            }
                        }
                    </ul>
                </div>
                <div class="clearfix"></div>
                <div class="tab-content">
                    @{
                        int takeCount = 2;
                        int skipCount = 0;
                    }
                    <div role="tabpanel" class="tab-pane fade show active " id="@featuresTabCategories[0].Name.Replace(" ", "_")">
                        <div class="m-lr-n-15px">
                            <div class="single-p-slide">
                                @{
                                    List<List<Product>> lists1 = new List<List<Product>>();
                                    var cat1Products = products.Where(x => x.Category == featuresTabCategories[0]).ToList();
                                    
                                    decimal cat1ListCount = Math.Ceiling((decimal)cat1Products.Count() / 2);
                                    for (var i = 0; i < cat1ListCount; i++)
                                    {
                                        lists1.Add(cat1Products.Skip(skipCount).Take(takeCount).ToList());
                                        skipCount += takeCount;
                                    }

                                    foreach (var list in lists1)
                                    {
                                        <div class="p-lr-15px">
                                            @foreach (var item in list)
                                            {
