                                    for (var i = 0; i < cat2ListCount; i++)
                                    {
                                        lists2.Add(cat2Products.Skip(skipCount).Take(takeCount).ToList());
                                        skipCount += takeCount;
                                    }

                                    foreach (var list in lists2)
                                    {
